<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NasaImageLibraryMAUIApp.ViewModels"
             x:Class="NasaImageLibraryMAUIApp.Views.DetailsPage"
             x:DataType="vm:DetailsViewModel"
             Title="Image Details"
             BackgroundColor="{AppThemeBinding Light=#f0f0f0, Dark=#121212}">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="0,0,0,20">

            <Grid HeightRequest="300" BackgroundColor="Black">
                <Image Source="{Binding HighResImageUrl}"
                       Aspect="AspectFit"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"/>

                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   Color="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
            </Grid>

            <VerticalStackLayout Padding="20" Spacing="10">

                <Label Text="{Binding Title}"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

                <BoxView HeightRequest="1" Color="Gray" Opacity="0.3"/>

                <Label Text="{Binding Description}"
                       FontSize="16"
                       LineHeight="1.2"
                       TextColor="{AppThemeBinding Light=#333, Dark=#ccc}"/>
                
            </VerticalStackLayout>

            <Button Text="Go Back"
                    Command="{Binding GoBackCommand}"
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    Margin="0,20,0,0"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>